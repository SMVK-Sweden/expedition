// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Diary {
  id       String  @id @default(uuid())
  dayId    String
  Day      Day?    @relation(fields: [dayId], references: [id])
  eventId  String?
  fullName String
  Diary    String
}

model Day {
  id           String   @id @default(uuid())
  day          DateTime
  plase        String
  xCoordinates Float
  yCoordinates Float
  Diary        Diary[]
}

model Author {
  id       String @id @default(uuid())
  fullName String
  typ      String
}
